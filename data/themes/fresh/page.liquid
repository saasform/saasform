<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{ seo_title }}</title>
  <meta name="description" content="{{ seo_description }}">
  <meta name="keywords" content="">
  <meta name="author" content="">
  {{ html_google_tag_manager_header }}
  {{ html_google_analytics }}
  {{ html_facebook_pixel }}

  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <link rel="stylesheet" href="{{ root_assets }}/assets/css/bundle.css">
  <link rel="icon" type="image/png" href="{{ root_assets }}/assets/img/favicon.png" />
</head>
<body>
  {{ html_google_tag_manager_body }}

  <nav x-data="initNavbar()" class="navbar is-fresh is-transparent no-shadow" role="navigation" aria-label="main navigation">
    <div class="container is-max-desktop">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <h2 class="is-size-4 has-text-primary has-text-weight-semibold">{{ name }}</h2>
          <!--img src="{{ root_assets }}/img/logo/logo.svg" alt="" width="112" height="28"-->
        </a>
        <div class="navbar-burger" @click="openMobileMenu()">
          <span class="menu-toggle">
            <span class="icon-box-toggle" :class="{
                'active': mobileOpen,
                '': !mobileOpen
              }">
              <span class="rotate">
                <i class="icon-line-top"></i>
                <i class="icon-line-center"></i>
                <i class="icon-line-bottom"></i>
              </span>
            </span>
        </div>
      </div>
      <div id="navbar-menu" class="navbar-menu is-static" :class="{
          'is-active': mobileOpen,
          '': !mobileOpen
        }">
        <div class="navbar-end">
          <a href="/#product" class="navbar-item is-primary">
            Product
          </a>
          <a href="/#pricing" class="navbar-item is-primary">
            Pricing
          </a>
          <a href="/#faq" class="navbar-item is-primary">
            FAQ
          </a>
        </div>
        <div class="navbar-end">
          {% if user.email %}
          <a href="/user" class="navbar-item is-primary">
            Account
          </a>
          <a href="{{ saas_redirect_url }}" class="navbar-item is-primary">
            Dashboard&nbsp;&nbsp;
            <span class="icon is-small">
              <i class="fa fa-arrow-right"></i>
            </span>
          </a>
          {% else %}
          <a href="/login" class="navbar-item is-primary">
            Log in
          </a>
          <a href="/signup" class="navbar-item">
            <span class="button signup-button is-primary raised">
              Sign up
            </span>
          </a>
          {% endif %}
        </div>
      </div>
    </div>  </nav>
  <nav x-data="initNavbar()"  x-on:scroll.window="scroll()" id="navbar-clone"
    class="navbar is-fresh is-transparent" role="navigation" aria-label="main navigation" :class="{
      'is-active': scrolled,
      '': !scrolled
    }">
    <div class="container is-max-desktop">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <h2 class="is-size-4 has-text-primary has-text-weight-semibold">{{ name }}</h2>
          <!--img src="{{ root_assets }}/img/logo/logo.svg" alt="" width="112" height="28"-->
        </a>
        <div class="navbar-burger" @click="openMobileMenu()">
          <span class="menu-toggle">
            <span class="icon-box-toggle" :class="{
                'active': mobileOpen,
                '': !mobileOpen
              }">
              <span class="rotate">
                <i class="icon-line-top"></i>
                <i class="icon-line-center"></i>
                <i class="icon-line-bottom"></i>
              </span>
            </span>
        </div>
      </div>
      <div id="navbar-menu" class="navbar-menu is-static" :class="{
          'is-active': mobileOpen,
          '': !mobileOpen
        }">
        <div class="navbar-end">
          <a href="/#product" class="navbar-item is-primary">
            Product
          </a>
          <a href="/#pricing" class="navbar-item is-primary">
            Pricing
          </a>
          <a href="/#faq" class="navbar-item is-primary">
            FAQ
          </a>
        </div>
        <div class="navbar-end">
          {% if user.email %}
          <a href="/user" class="navbar-item is-primary">
            Account
          </a>
          <a href="{{ saas_redirect_url }}" class="navbar-item is-primary">
            Dashboard&nbsp;&nbsp;
            <span class="icon is-small">
              <i class="fa fa-arrow-right"></i>
            </span>
          </a>
          {% else %}
          <a href="/login" class="navbar-item is-primary">
            Log in
          </a>
          <a href="/signup" class="navbar-item">
            <span class="button signup-button is-primary raised">
              Sign up
            </span>
          </a>
          {% endif %}
        </div>
      </div>
    </div>  </nav>

  
  <section class="section">
    <div class="container is-max-desktop content">
      <h1 class="title">
        {{ page_title }}
      </h1>
      {{ page_body }}
    </div>
  </section>
  
  <footer class="footer">
    <div class="container is-max-desktop">
      <div class="columns content">
        <div class="column is-one-quarter">
          <div class="footer-logo">
            <h3 class="is-size-4 has-text-weight-semibold">{{ name }}</h3>
            <!--img src="{{ root_assets }}/img/logo/logo.svg"-->
          </div>
          <p>&copy; 2020 {{ legal_company_name }}</p>
          <div class="level-left">
            {% if social_github %}
            <a class="level-item has-text-grey" href="{{ social_github }}">
              <span class="icon">
                <i class="fab fa-lg fa-github"></i>
              </span>
            </a>
            {% endif %}
            {% if social_twitter %}
            <a class="level-item has-text-grey" href="{{ social_twitter }}">
              <span class="icon">
                <i class="fab fa-lg fa-twitter"></i>
              </span>
            </a>
            {% endif %}
            {% if social_linkedin %}
            <a class="level-item has-text-grey" href="{{ social_linkedin }}">
              <span class="icon">
                <i class="fab fa-lg fa-linkedin"></i>
              </span>
            </a>
            {% endif %}
            {% for item in socials %}
            <a class="level-item has-text-grey" href="{{ item.url }}">
              <span class="icon">
                <i class="fab fa-lg fa-{{ item.name }}"></i>
              </span>
            </a>
            {% endfor %}
          </div>
  
        </div>
        <div class="column">
          <div class="columns mt-0">
  
            {% for menu in footer %}
            <div class="column pt-0">
              <div class="level-right">
                <div>
                  <div class="footer-header">
                    <h3 class="is-size-5 has-text-weight-normal is-uppercase" style="line-height: 1.75rem;margin-bottom: 1rem">{{ menu.title }}</h3>
                  </div>
                  <ul class="is-unstyled">
                    {% for item in menu.links %}
                    <li><a class="has-text-grey" href="{{ item.url }}">{{ item.name }}</a></li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
            {% endfor %}
  
            <div class="column pt-0">
            <div class="level-right">
            <div>
              <div class="footer-header">
                <h3 class="is-size-5 has-text-weight-normal is-uppercase" style="line-height: 1.75rem;margin-bottom: 1rem">Legal</h3>
              </div>
              <ul class="is-unstyled">
                <li><a class="has-text-grey" href="/privacy-policy">Privacy policy</a></li>
                <li><a class="has-text-grey" href="/terms-of-service">Terms of service</a></li>
              </ul>
            </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script src="{{ root_assets }}/assets/js/bundle.js"></script>
</body>
</html>
