<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{ seo_title }}</title>
  <meta name="description" content="{{ seo_description }}">
  <meta name="keywords" content="">
  <meta name="author" content="">
  {{ html_google_tag_manager_header }}
  {{ html_google_analytics }}
  {{ html_facebook_pixel }}

  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <link rel="stylesheet" href="{{ root_assets }}/assets/css/bundle.css">
  <link rel="icon" type="image/png" href="{{ root_assets }}/assets/img/favicon.png" />
</head>
<body>
  {{ html_google_tag_manager_body }}

  <nav x-data="initNavbar()" class="navbar is-fresh is-transparent no-shadow" role="navigation" aria-label="main navigation">
    <div class="container is-max-desktop">
      <div class="navbar-brand">
        <a class="navbar-item" href="#">
          <h2 class="is-size-4 has-text-primary has-text-weight-semibold">{{ name }}</h2>
          <!--img src="{{ root_assets }}/img/logo/logo.svg" alt="" width="112" height="28"-->
        </a>
        <div class="navbar-burger" @click="openMobileMenu()">
          <span class="menu-toggle">
            <span class="icon-box-toggle" :class="{
                'active': mobileOpen,
                '': !mobileOpen
              }">
              <span class="rotate">
                <i class="icon-line-top"></i>
                <i class="icon-line-center"></i>
                <i class="icon-line-bottom"></i>
              </span>
            </span>
        </div>
      </div>
      <div id="navbar-menu" class="navbar-menu is-static" :class="{
          'is-active': mobileOpen,
          '': !mobileOpen
        }">
        <div class="navbar-end">
          <a href="#product" class="navbar-item is-primary">
            Product
          </a>
          <a href="#pricing" class="navbar-item is-primary">
            Pricing
          </a>
          <a href="#faq" class="navbar-item is-primary">
            FAQ
          </a>
        </div>
        <div class="navbar-end">
          {% if user.email %}
          <a href="/user" class="navbar-item is-primary">
            Account
          </a>
          <a href="{{ saas_redirect_url }}" class="navbar-item is-primary">
            Dashboard&nbsp;&nbsp;
            <span class="icon is-small">
              <i class="fa fa-arrow-right"></i>
            </span>
          </a>
          {% else %}
          <a href="{{ nav_links.login_url }}" class="navbar-item is-primary">
            {{ nav_links.login_text }}
          </a>
          <a href="{{ nav_links.signup_url }}" class="navbar-item">
            <span class="button primary-btn raised">
              {{ nav_links.signup_text }}
            </span>
          </a>
          {% endif %}
        </div>
      </div>
    </div>  </nav>
  <nav x-data="initNavbar()"  x-on:scroll.window="scroll()" id="navbar-clone"
    class="navbar is-fresh is-transparent" role="navigation" aria-label="main navigation" :class="{
      'is-active': scrolled,
      '': !scrolled
    }">
    <div class="container is-max-desktop">
      <div class="navbar-brand">
        <a class="navbar-item" href="#">
          <h2 class="is-size-4 has-text-primary has-text-weight-semibold">{{ name }}</h2>
          <!--img src="{{ root_assets }}/img/logo/logo.svg" alt="" width="112" height="28"-->
        </a>
        <div class="navbar-burger" @click="openMobileMenu()">
          <span class="menu-toggle">
            <span class="icon-box-toggle" :class="{
                'active': mobileOpen,
                '': !mobileOpen
              }">
              <span class="rotate">
                <i class="icon-line-top"></i>
                <i class="icon-line-center"></i>
                <i class="icon-line-bottom"></i>
              </span>
            </span>
        </div>
      </div>
      <div id="navbar-menu" class="navbar-menu is-static" :class="{
          'is-active': mobileOpen,
          '': !mobileOpen
        }">
        <div class="navbar-end">
          <a href="#product" class="navbar-item is-primary">
            Product
          </a>
          <a href="#pricing" class="navbar-item is-primary">
            Pricing
          </a>
          <a href="#faq" class="navbar-item is-primary">
            FAQ
          </a>
        </div>
        <div class="navbar-end">
          {% if user.email %}
          <a href="/user" class="navbar-item is-primary">
            Account
          </a>
          <a href="{{ saas_redirect_url }}" class="navbar-item is-primary">
            Dashboard&nbsp;&nbsp;
            <span class="icon is-small">
              <i class="fa fa-arrow-right"></i>
            </span>
          </a>
          {% else %}
          <a href="{{ nav_links.login_url }}" class="navbar-item is-primary">
            {{ nav_links.login_text }}
          </a>
          <a href="{{ nav_links.signup_url }}" class="navbar-item">
            <span class="button primary-btn raised">
              {{ nav_links.signup_text }}
            </span>
          </a>
          {% endif %}
        </div>
      </div>
    </div>  </nav>

  
  <section class="hero is-midheight is-default is-bold">
    <div class="hero-body">
      <div class="container is-max-desktop">
        <div class="columns is-vcentered">
          <div class="column is-5 landing-caption">
            <h1 class="title is-1 is-bold is-spaced">
              {{ title | formatDot }}
            </h1>
            <h2 class="subtitle is-size-5 has-text-grey">{{ hero_subtitle | formatNoOrphanDot }}</h2>
            <div class="button-wrap">
              <a href="{{ nav_links.signup_url }}" class="button is-primary is-medium raised">
                {{ hero_cta }}
              </a>
            </div>
          </div>
          <div class="column is-offset-1">
            <figure class="image">
              <img src="{{ hero_image_url }}" alt="{{ name }}">
            </figure>
          </div>
  
        </div>
      </div>
    </div>
  
    <div class="hero-foot mb-20">
      <div class="container is-max-desktop content">
        <div class="columns">
          {% for item in benefits %}
            <div class="column">
  
              <img src="{{ item.image_url }}" alt="{{ item.title | formatDot }}" width="50" />
  
              <h4>
                {{ item.title | formatDot }}
              </h4>
  
              <p class="is-muted has-text-grey">
                {{ item.text | formatNoOrphanDot }}
              </p>
  
            </div>
          {% endfor %}
        </div>
  
      </div>
    </div>
  </section>
  
  {% assign len = logos.length %}
  {% if len > 0 %}
  <section class="section is-bordered mb-0">
    <div class="container is-max-desktop">
      <div class="columns is-vcentered">
        {% for item in logos %}
          <div class="column has-text-centered">
  
            <img class="partner-logo" src="{{ item.image_url }}" alt="{{ item.name }}">
  
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}
  
  {% assign len = features.length %}
  {% if len > 0 %}
  <section id="product" class="section is-medium has-vgradient">
    <div class="container is-max-desktop">
      {% for item in features %}
      <div class="columns is-vcentered">
  
        {% if item.position != 'left' %}
        <div class="column">
          <img src="{{ item.image_url }}" alt="{{ item.title | formatDot }}">
        </div>
        {% endif %}
  
        <div class="column content">
          <h3 class="title is-size-3 has-text-weight-normal">{{ item.title | formatDot }}</h3>
          <p class="is-size-5 has-text-grey">{{ item.text | formatNoOrphanDot }}</p>
        </div>
  
        {% if item.position == 'left' %}
        <div class="column">
          <img src="{{ item.image_url }}" alt="{{ item.title | formatDot }}">
        </div>
        {% endif %}
      </div>
      {% endfor %}
  
    </div>
  </section>
  {% endif %}
  
  <section id="pricing" class="section is-front">
    <div class="container is-max-desktop">
      <div class="content has-text-centered">
        <h2 class="title is-2">{{ pricing_title | formatDot }}</h2>
  
        <h3 class="subtitle is-5 is-muted has-text-weight-normal">
          {% if pricing_text != '' %}
            {{ pricing_text | formatNoOrphanDot }}
          {% elsif pricing_free_trial > 0 %}
            All plans start with a {{ pricing_free_trial }} day free trial.
            {% if pricing_credit_card_required == false %}
              <br/>No credit card required to sign up.
            {% endif %}
          {% endif %}
        </h3>
      </div>
  
          <div class="content has-text-centered">
            <div class="field">
              <span>Monthly&nbsp;</span>
              <input id="priceSwitch" name="priceSwitch" type="checkbox" class="switch is-rounded" checked="checked" x-data="{checked: true}" @click="$dispatch('pricing-recount', { month: checked })" x-model="checked">
              <label for="priceSwitch">Annually</label>
            </div>
          </div>
      
          <div class="pricing-wrap">
          {% for item in plans %}
            <div class="feature-card is-pricing has-text-centered">
              <h3 class="tag is-primary is-light is-uppercase">{{ item.name }}</h3>
              <div class="price has-text-weight-normal">
                {% if item.price_text %}
                  {{ item.price_text }}
                {% else %}
                  <span class="pricing-currency">$ </span><span id="pricing{{ item.name }}" class="pricing-count"
                    x-data="{ price_year: {{ item.price_year }}, price_month: {{ item.price_month }}, price_decimals: {{ item.price_decimals }} }" x-on:pricing-recount.window="window.pricingUpdate($el, $event.detail.month ? price_month : price_year, price_decimals)">{{ item.price_year }}</span><span class="pricing-monthly"> /mo</span>
                {% endif %}
              </div>
      
              <ul class="pricing-features has-text-left">
              {% for feature in item.features %}
                <li>
                  <span class="tag is-success is-light is-rounded">  
                    <span class="icon is-small">
                      <i class="fa fa-check"></i>
                    </span>
                  </span>
                  {{ feature.name }}
                </li>
              {% endfor %}
              </ul>
      
              {% if item.primary %}
              <a id={{ item.id }} class="button is-fullwidth is-medium is-primary plan-purchase-button" href="{{ item.button_href | default: '/signup' }}">
              {% else %}
              <a id={{ item.id }} class="button is-fullwidth is-medium is-primary is-light plan-purchase-button" href="{{ item.button_href | default: '/signup' }}">
              {% endif %}
                {{ item.button }}
              </a>
            </div>
          {% endfor %}
          </div>
  
    </div>
  </section>
  
  <section id="faq" class="section has-background-dark is-medium is-back">
    <div class="container is-max-desktop">
      <div class="columns">
  
        <div class="column is-8 is-offset-2 has-text-centered">
  
        <p class="tag is-dark is-rounded is-uppercase">
          {{ cta_badge }}
        </p>
        <br/>
  
        <p class="has-text-light is-size-2">
          {{ cta_title | formatDot }}
        </p>
        <br/>
  
        <p class="has-text-grey-light is-size-5">
          {{ cta_text | formatNoOrphanDot }}
        </p>
        <br/>
  
        <a href="{{ nav_links.signup_url }}" class="button is-primary is-medium">
          {{ cta_button }}
        </a>
  
  
      </div>
      </div>
    </div>
  </section>
  
  <footer class="footer">
    <div class="container is-max-desktop">
      {% if made_with_love %}
      <p class="has-text-centered">{{ made_with_love }}</a></p>
      {% endif %}
      <div class="columns content">
        <div class="column is-one-quarter">
          <div class="footer-logo">
            <h3 class="is-size-4 has-text-weight-semibold">{{ name }}</h3>
            <!--img src="{{ root_assets }}/img/logo/logo.svg"-->
          </div>
          <p>&copy; 2021 {{ legal_company_name }}</p>
          <div class="level-left">
            {% if social_github %}
            <a class="level-item has-text-grey" href="{{ social_github }}">
              <span class="icon">
                <i class="fab fa-lg fa-github"></i>
              </span>
            </a>
            {% endif %}
            {% if social_twitter %}
            <a class="level-item has-text-grey" href="{{ social_twitter }}">
              <span class="icon">
                <i class="fab fa-lg fa-twitter"></i>
              </span>
            </a>
            {% endif %}
            {% if social_linkedin %}
            <a class="level-item has-text-grey" href="{{ social_linkedin }}">
              <span class="icon">
                <i class="fab fa-lg fa-linkedin"></i>
              </span>
            </a>
            {% endif %}
            {% for item in socials %}
            <a class="level-item has-text-grey" href="{{ item.url }}">
              <span class="icon">
                <i class="fab fa-lg fa-{{ item.name }}"></i>
              </span>
            </a>
            {% endfor %}
          </div>
  
        </div>
        <div class="column">
          <div class="columns mt-0">
  
            {% for menu in footer %}
            <div class="column pt-0">
              <div class="level-right">
                <div>
                  <div class="footer-header">
                    <h3 class="is-size-5 has-text-weight-normal is-uppercase" style="line-height: 1.75rem;margin-bottom: 1rem">{{ menu.title }}</h3>
                  </div>
                  <ul class="is-unstyled">
                    {% for item in menu.links %}
                    <li><a class="has-text-grey" href="{{ item.url }}">{{ item.name }}</a></li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
            {% endfor %}
  
            <div class="column pt-0">
            <div class="level-right">
            <div>
              <div class="footer-header">
                <h3 class="is-size-5 has-text-weight-normal is-uppercase" style="line-height: 1.75rem;margin-bottom: 1rem">Legal</h3>
              </div>
              <ul class="is-unstyled">
                <li><a class="has-text-grey" href="/privacy-policy">Privacy policy</a></li>
                <li><a class="has-text-grey" href="/terms-of-service">Terms of service</a></li>
              </ul>
            </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script src="{{ root_assets }}/assets/js/bundle.js"></script>
  {{ html_chatbot }}
</body>
</html>
