    class="navbar is-fresh is-transparent" role="navigation" aria-label="main navigation" :class="{
      'is-active': scrolled,
      '': !scrolled
    }">
    <div class="container is-max-desktop">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <h2 class="is-size-4 has-text-primary has-text-weight-semibold">{{ name }}</h2>
          <!--img src="{{ root_assets }}/img/logo/logo.svg" alt="" width="112" height="28"-->
        </a>
        <div class="navbar-burger" @click="openMobileMenu()">
          <span class="menu-toggle">
            <span class="icon-box-toggle" :class="{
                'active': mobileOpen,
                '': !mobileOpen
              }">
              <span class="rotate">
                <i class="icon-line-top"></i>
                <i class="icon-line-center"></i>
                <i class="icon-line-bottom"></i>
              </span>
            </span>
