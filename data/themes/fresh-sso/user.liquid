            <div class="card-content content">
          
              <h3 class="has-text-weight-normal">Invoices</h3><br/>
          
            </div>
          </div>
          {% endif %}
          {% endif %}
  
          {% if user_page == 'team' %}
          <div class="card">
            <div class="card-content content">
          
              <div class="level">
                <div class="level-left">
                  <h3 class="has-text-weight-normal mb-0">Your Team</h3>
